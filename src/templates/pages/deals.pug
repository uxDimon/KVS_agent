                    .deals-card__title 225 235 000 Р
                .deals__card.deals-card
                    .deals-card__subtitle Всего завершенных сделок
                    .deals-card__title 20
            form.agents__filterclients.form.ajax-form(enctype="multipart/form-data" method="POST" action autocomplete="on" novalidate="novalidate")
                ul.fields
                    li
                        input.form-control(data-required="yes" type="text" id="numDeal" value="" name="numDeal" required="")
                        label(for="numDeal") Номер брони
                    li
                        input.form-control(data-required="yes" type="text" id="nameAgent" value="" name="nameAgent" required="")
                        label(for="nameAgent") Имя агента
                    li
                        input.form-control(data-required="yes" type="text" id="nameClient" value="" name="nameClient" required="")
                        label(for="nameClient") Имя клиента
                    li
                        input.form-control(data-required="yes" type="text" id="dateDeal" value="" name="dateDeal" required="")
                        label(for="dateDeal") Дата брони
                    li
                        input.form-control(data-required="yes" type="text" id="complex" value="" name="complex" required="")
                        label(for="complex") Жилой комплекс 
                    li
                        input.form-control(data-required="yes" type="text" id="statusDeal" value="" name="statusDeal" required="")
                        label(for="statusDeal") Статус сделки

