extends ../template

block variables
  - var title = 'Аккредитация'

block content
    main.components-container
        .stream-wide
            .section.main-text
                h1.title Заявка на аккредитацию
                .markup
                    p.text Заполните информационную карту и загрузите документы на аккредитацию для дальнейших действий.
        .stream-narrow
            .expanding-doc-uploader.expanding-text
                ul.accreditation__list
                    li
                        input(type="checkbox" id="expanding-text-1")
                        label(for="expanding-text-1") Раскрыть/свернуть текст
                        h4 Данные организации
                            span 
                            label(for="expanding-text-1")
                                span Раскрыть/свернуть текст
                        form.form.ajax-form(method="post" enctype="multipart/form-data" name="" action="")
                            ul.fields.mob-padding
                                li.field100
                                    input(id="nameCompany" name="nameCompany" type="text" data-required="yes")
                                    label(for="nameCompany") Полное название организации
                                li.field100
                                    input(id="addressCompany" name="addressCompany" type="text" data-required="yes")
                                    label(for="addressCompany") Юридический адрес
                                li.field100
                                    input(data-required="yes" type="text" id="phoneCompany" value="" data-type="phone" name="phoneCompany" required="" data-inputmask-mask="+7 (999) 999-9999" data-mask="+7 (999) 999-9999" data-has-mask="" inputmode="text")
                                    label(for="phoneCompany") Телефон организации
                                li.field100
                                    input(id="emailCompany" name="emailCompany" type="text" data-required="yes")
                                    label(for="emailCompany") E-mail
                                li
                                    input(id="innCompany" name="innCompany" type="text" data-required="yes")
                                    label(for="innCompany") ИНН
                                li
                                    input(id="kppCompany" name="kppCompany" type="text" data-required="yes")
                                    label(for="kppCompany") КПП
                                li.field100
                                    input(id="faceCompany" name="faceCompany" type="text" data-required="yes")
                                    label(for="faceCompany") Контактное лицо
                                li.field100
                                    input(id="requisitesCompany" name="requisitesCompany" type="text" data-required="yes")
                                    label(for="requisitesCompany") Банковские реквизиты
                    li
                        input(type="checkbox" id="expanding-text-2")
                        label(for="expanding-text-2") Раскрыть/свернуть текст
                        h4 Копия свидетельства о государственной регистрации 
                            span 
                            label(for="expanding-text-2")
                                span Раскрыть/свернуть текст
                        form.form.ajax-form(method="post" enctype="multipart/form-data" name="" action="")
                            .requirements
                                h5 Требования к загружаемым файлам паспорта
                                ul
                                    li Все развороты паспорта, даже если пустые;
                                    li Видны края всех разворотов паспорта;
                                    li Разворот виден полностью;
                                    li Нет посторонних предметов и бликов;
                                    li Данные не перекрыты пальцами.
                            ul.fields
                                li.not-empty
                                    input.not-empty(type="file" name="file" id="file_2" multiple="")
                                    label.area(for="file_2") Загрузить фото
                    li
                        input(type="checkbox" id="expanding-text-3")
                        label(for="expanding-text-3") Раскрыть/свернуть текст
